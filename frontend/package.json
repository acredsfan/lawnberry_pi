{
  "name": "lawnberry-frontend",
  "version": "2.0.0",
  "description": "LawnBerry Pi v2 - Vue 3 Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "start": "node ./server.mjs",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:ui": "eslint src/views --ext .vue,.ts",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest run --runInBand --dir tests/ui --passWithNoTests"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.5",
    "@types/dompurify": "^3.0.5",
    "@vue-leaflet/vue-leaflet": "^0.10.1",
    "@vueuse/core": "^10.9.0",
    "axios": "^1.6.0",
    "chart.js": "^4.4.4",
    "compression": "^1.7.4",
    "dompurify": "^3.2.7",
    "express": "^4.19.2",
    "http-proxy-middleware": "^3.0.0",
    "leaflet": "^1.9.4",
    "leaflet.gridlayer.googlemutant": "^0.13.5",
    "markdown-it": "^14.1.0",
    "morgan": "^1.10.1",
    "pinia": "^2.1.0",
    "socket.io-client": "^4.7.0",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.0",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.8",
    "@types/node": "^20.12.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.25.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.0",
    "typescript": "~5.4.0",
    "vite": "^5.2.0",
    "vitest": "^2.0.0",
    "vue-tsc": "^2.0.0"
  },
  "overrides": {
    "esbuild": "0.25.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
